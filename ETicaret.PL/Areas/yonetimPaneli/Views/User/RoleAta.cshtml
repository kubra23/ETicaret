@model List<AppRoleAtaVM>

    <form asp-action="RoleAta" asp-controller="User" method="post">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="@Model[i].HasAssign">
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <label class="form-check-label">
                            @Model[i].Name
                        </label>
                    </div>
                </div>
            </div>
        }
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Rolleri Ata</button>
            </div>
        </div>
    </form>
