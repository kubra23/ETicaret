@model AppUserKayitOlVM

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"><partial name="~/Views/Partials/SonucMesajlariPartial.cshtml" /></div>
    <div class="col-md-3"></div>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="KayitOl" asp-controller="User" method="post">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" type="text" class="form-control" placeholder="Username">
                <small class="form-text text-muted"><span asp-validation-for="UserName" style="color:red;"></span></small>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <small class="form-text text-muted"><span asp-validation-for="Email" style="color:red;"></span></small>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                <small class="form-text text-muted"><span asp-validation-for="Password" style="color:red;"></span></small>
            </div>
            <div class="form-group">
                <label>Password Tekrar</label>
                <input asp-for="PasswordTekrar" type="password" class="form-control" placeholder="Password tekrar">
                <small class="form-text text-muted"><span asp-validation-for="PasswordTekrar" style="color:red;"></span></small>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>


