@model AppUserGuncelleVM

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6"><partial name="~/Views/Partials/SonucMesajlariPartial.cshtml" /></div>
    <div class="col-md-3"></div>
</div>

<div class="row">
    <div class="col-4">
        <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-home-list" data-toggle="list" href="#list-p1" role="tab" aria-controls="home">Bilgileri Güncelle</a>
            <a class="list-group-item list-group-item-action" id="list-profile-list" data-toggle="list" href="#list-p2" role="tab" aria-controls="profile">Oturum Ayarları </a>
        </div>
    </div>
    <div class="col-8">
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-p1" role="tabpanel" aria-labelledby="list-home-list">
                <form asp-action="ProfilAyarlari" asp-controller="User" method="post">
                    <div class="form-group">
                        <label>Email address</label>
                        <input type="email" disabled asp-for="Email" class="form-control">
                        <input type="hidden" asp-for="Email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" disabled asp-for="Username" class="form-control">
                        <input type="hidden" asp-for="Username" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Telefon Numarası</label>
                        <input type="tel" asp-for="PhoneNumber" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Tuttuğu Takım</label>
                        <input type="text" asp-for="TuttuguTakim" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Mevcut Şifre</label>
                        <input type="text" asp-for="CurrentPassword" class="form-control">
                        <small class="form-text text-muted"><span asp-validation-for="CurrentPassword" style="color:red;"></span></small>
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre</label>
                        <input type="text" asp-for="Password" class="form-control">
                        <small class="form-text text-muted"><span asp-validation-for="Password" style="color:red;"></span></small>
                    </div>
                    <div class="form-group">
                        <label>Yeni Şifre Tekrar</label>
                        <input type="text" asp-for="PasswordTekrar" class="form-control">
                        <small class="form-text text-muted"><span asp-validation-for="PasswordTekrar" style="color:red;"></span></small>
                    </div>


                    <button type="submit" class="btn btn-primary">Profil Bilgilerini Güncelle</button>
                </form>
            </div>
            <div class="tab-pane fade" id="list-p2" role="tabpanel" aria-labelledby="list-profile-list">
                <partial name="~/Views/User/Partials/OturumAyarlariPartial.cshtml" model="new TwoFactorTypeSelectVM() { TwoFactorType = Model.TwoFactorType, TwoFactorEnabled = Model.TwoFactorEnabled }" />
            </div>
        </div>
    </div>
</div>


@section script{
    <script>

        $('#twoFactorAuthentication').change(function () {
            if ($('#twoFactorAuthentication').is(":checked")) {
                $("#secenekler").fadeIn(1500);
            } else {
                $("#secenekler").fadeOut(500);
            }
        });
    </script>
}