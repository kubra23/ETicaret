@{
    Layout = "_Layout";
}

    <div class="row">
        <div class="col-md-2">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a asp-action="Index" asp-controller="Urun" asp-route-kategoriId="">Tüm Ürünler</a>
                    <span class="badge badge-primary badge-pill">@((ViewBag.Kategoriler as List<KategoriListeleVM>).Sum(k=> k.UrunAdet))</span>
                </li>
                @foreach (var kategori in ViewBag.Kategoriler as List<KategoriListeleVM>)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="Urun" asp-route-kategoriId="@kategori.Id">@kategori.KategoriAdi</a>
                        <span class="badge badge-primary badge-pill">@kategori.UrunAdet</span>
                    </li>
                }
            </ul>

        </div>
        <div class="col-md-10">
            @RenderBody()
        </div>
    </div>